<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaboratorioCalificado02"
        tools:targetApi="31">

        <!-- Configurar Ejercicio02 con exportado para que pueda ser ejecutado -->
        <activity
            android:name=".Ejercicio02"
            android:exported="true"
            android:label="@string/title_activity_ejercicio02"
            android:theme="@style/Theme.LaboratorioCalificado02" />

        <!-- Configurar MainActivity2 con exportado -->
        <activity
            android:name=".MainActivity2"
            android:exported="true"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.LaboratorioCalificado02" />

        <!-- Configurar Ejercicio01 como la actividad principal con intent-filter -->
        <activity
            android:name=".Ejercicio01"
            android:exported="true"
            android:label="@string/title_activity_ejercicio01"
            android:theme="@style/Theme.LaboratorioCalificado02">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity exportada -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- DetallesPedidoActivity exportada -->
        <activity
            android:name=".DetallesPedidoActivity"
            android:exported="true"
            android:label="Detalles Pedido"
            android:theme="@style/Theme.LaboratorioCalificado02" />

    </application>

</manifest>
