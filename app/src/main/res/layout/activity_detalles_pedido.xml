<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".DetallesPedidoActivity">

    <!-- Título "Pedido" -->
    <TextView
        android:id="@+id/tvTituloPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedido"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Sección de datos con íconos y textos -->
    <LinearLayout
        android:id="@+id/section_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTituloPedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <!-- Icono y nombre del cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cliente"
                android:contentDescription="Icono Cliente" />

            <TextView
                android:id="@+id/tvNombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Cliente"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Icono y número del cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/numero"
                android:contentDescription="Icono Teléfono" />

            <TextView
                android:id="@+id/tvNumeroCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número Cliente"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Icono y productos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/productos"
                android:contentDescription="Icono Productos" />

            <TextView
                android:id="@+id/tvProductos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Icono y ubicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ubicacion"
                android:contentDescription="Icono Ubicación" />

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botones de acción: Llamar, WhatsApp, y Maps -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginBottom="16dp">

        <!-- Botón Llamar sin icono -->
        <Button
            android:id="@+id/btnLlamar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LLAMAR"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:layout_weight="1"
            android:padding="8dp" />

        <!-- Botón WhatsApp sin icono -->
        <Button
            android:id="@+id/btnWhatsapp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="WSP"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_weight="1"
            android:padding="8dp" />

        <!-- Botón Maps sin icono -->
        <Button
            android:id="@+id/btnMaps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MAPS"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:layout_weight="1"
            android:padding="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
